[Unit]
Description=BlockShelf Daily Backup Service
After=network.target postgresql.service

[Service]
Type=oneshot
User=blockshelf
Group=blockshelf
WorkingDirectory=/opt/blockshelf
ExecStartPre=/bin/ln -sf /etc/blockshelf/.env /opt/blockshelf/.env
ExecStart=/opt/blockshelf/.venv/bin/python manage.py create_backups --full-db --all-users --keep 10

# Security settings
PrivateTmp=true
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
